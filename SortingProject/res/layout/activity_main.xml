<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
 	<include
        android:id="@+id/toolBar"
        layout="@layout/toolbar" >
    </include>

    <Button
        android:id="@+id/btQuickSort"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvIntro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:background="@color/button_color"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="Quick Sort" />

    <Button
        android:id="@+id/btSelectionSort"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
         android:layout_below="@+id/btQuickSort"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:background="@color/button_color"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="Selection Sort" />

    <Button
        android:id="@+id/btInsertionSort"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btSelectionSort"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/button_color"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="Insertion Sort" />

    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="PLEASE CHOOSE ALGORITHM"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor" />

</RelativeLayout>
